{
  "variables": {
    "aws_access_key_id": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_access_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "generated_ami_name": "util_slave-ubuntu-bionic-x86_64",
    "ansible_inventory_directory": "environments/prod",
    "ssh_pass": "vagrant"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",
      "ssh_username": "ubuntu",
      "instance_type": "t2.micro",
      "region": "eu-west-2",
      "source_ami": "ami-0883141bc92a74917",
      "ami_name": "{{user `generated_ami_name`}}-{{user `commit_hash`}}",
      "run_tags": {
        "Name": "util_slave_001",
        "full_name": "{{user `generated_ami_name`}}",
        "group": "util_slaves",
        "environment": "prod"
      },
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sdb",
          "volume_size": 50,
          "volume_type": "gp2",
          "encrypted": false,
          "delete_on_termination": true
        },
        {
          "device_name": "/dev/sdc",
          "volume_size": 50,
          "volume_type": "gp2",
          "encrypted": false,
          "delete_on_termination": true
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sdb",
          "volume_size": 50,
          "volume_type": "gp2",
          "encrypted": false,
          "delete_on_termination": true
        },
        {
          "device_name": "/dev/sdc",
          "volume_size": 50,
          "volume_type": "gp2",
          "encrypted": false,
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
      "inline": [
        "sed -Ei 's/^(.*ubuntu.* main)$/\\1 universe/' /etc/apt/sources.list",
        "apt-get update -y"
      ]
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
      "inline": [
        "apt-get install -y python",
        "apt-get install -y python-pip"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/util-slave.yml",
      "inventory_directory": "{{user `ansible_inventory_directory`}}",
      "groups": "util_slaves",
      "extra_arguments": ["--extra-vars", "cloud_environment={{ user `cloud_environment` }}"],
      "only": ["amazon-ebs"]
    }
  ]
}
