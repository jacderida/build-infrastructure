{
  "variables": {
    "aws_access_key_id": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_access_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "vault_password_path": "{{env `SAFE_BUILD_INFRA_VAULT_PASS_PATH`}}",
    "generated_ami_name": "util_slave-ubuntu-bionic-x86_64",
    "ansible_inventory_directory": "environments/prod",
    "ssh_pass": "vagrant"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",
      "ssh_username": "ubuntu",
      "instance_type": "t2.micro",
      "region": "eu-west-2",
      "source_ami": "ami-0883141bc92a74917",
      "ami_name": "{{user `generated_ami_name`}}-{{user `commit_hash`}}",
      "run_tags": {
        "Name": "util_slave_001",
        "full_name": "{{user `generated_ami_name`}}",
        "group": "util_slaves",
        "environment": "prod"
      },
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sdb",
          "volume_size": 50,
          "volume_type": "gp2",
          "encrypted": false,
          "delete_on_termination": true
        },
        {
          "device_name": "/dev/sdc",
          "volume_size": 50,
          "volume_type": "gp2",
          "encrypted": false,
          "delete_on_termination": true
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sdb",
          "volume_size": 50,
          "volume_type": "gp2",
          "encrypted": false,
          "delete_on_termination": true
        },
        {
          "device_name": "/dev/sdc",
          "volume_size": 50,
          "volume_type": "gp2",
          "encrypted": false,
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
      "script": "./scripts/sh/install_python.sh"
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/util-slave.yml",
      "inventory_directory": "{{ user `ansible_inventory_directory` }}",
      "groups": "util_slaves",
      "extra_arguments": [
        "--vault-password-file={{ user `vault_password_path` }}",
        "--extra-vars",
        "cloud_environment={{ user `cloud_environment` }}",
        "--extra-vars",
        "provisioning_user=jenkins",
        "--extra-vars",
        "ansible_vault_password={{ user `ansible_vault_password` }}",
        "--extra-vars",
        "provisioning_user={{ user `provisioning_user` }}",
        "--extra-vars",
        "build_user={{ user `build_user` }}"
      ],
      "only": ["amazon-ebs"]
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -i -u {{ user `build_user` }} -E bash '{{.Path}}'",
      "inline": "cat docker_password.txt | docker login --username jenkinsmaidsafe --password-stdin",
      "only": ["amazon-ebs"]
    }
  ]
}
